<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PreferencesActivity" >

    <PreferenceCategory
        android:summary="Profil utilisateur"
        android:title="@string/category_profil" >

        <EditTextPreference
            android:key="username"
            android:summary="Entrez votre nom d&apos;utilisateur"
            android:title="@string/username" />

        <EditTextPreference
            android:key="prénom"
            android:summary="Entrez votre prénom"
            android:title="@string/prenom" />

        <EditTextPreference
            android:key="nom"
            android:summary="Entrez votre nom"
            android:title="@string/nom" />

        <Preference
            android:key="image"
            android:persistent="true"
            android:title="@string/image" >

            <intent
                android:action="android.intent.action.GET_CONTENT"
                android:mimeType="image/*" />
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>