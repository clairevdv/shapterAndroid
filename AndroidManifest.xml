<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shapter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shapter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shapter.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.shapter.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shapter.MainActivity" />
        </activity>
        <activity
            android:name="com.shapter.DiscoveryActivity"
            android:label="@string/title_activity_discovery"
            android:parentActivityName="com.shapter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shapter.MainActivity" />
        </activity>
        <activity
            android:name="com.shapter.DescriptionUEActivity"
            android:label="@string/title_activity_description_ue"
            android:parentActivityName="DiscoveryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="DiscoveryActivity" />
        </activity>
        <activity
            android:name="com.shapter.LogedActivity"
            android:label="@string/title_activity_loged"
            android:parentActivityName="LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="LoginActivity" />
        </activity>
    </application>

</manifest>
